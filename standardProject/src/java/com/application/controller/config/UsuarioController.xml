<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
        
<struts>
    <package name="usuario" namespace="/usuario" extends="default">
    	<!-- Index -->
        <action name="index" method="index" class="usuarioController">
            <result name="success" type="tiles">usuarioIndex</result>
            <result name="error" type="tiles">usuarioIndex</result>
            <result name="input" type="tiles">usuarioIndex</result>
	</action>

        <!-- Edit -->
        <action name="edit" method="edit" class="usuarioController">
            <result name="success" type="tiles">usuarioEdit</result>
            <result name="successSave" type="redirectAction">
            	<param name="actionName">index</param>
                <param name="namespace">/usuario</param>
                <param name="status">success</param>
            </result>
            <result name="notFound" type="redirectAction">
            	<param name="actionName">index</param>
                <param name="namespace">/usuario</param>
                <param name="status">notFound</param>
            </result>
            <result name="error" type="tiles">usuarioEdit</result>
            <result name="input" type="tiles">usuarioEdit</result>
	</action>

        <!-- Add -->
        <action name="add" method="add" class="usuarioController">
            <result name="success" type="tiles">usuarioAdd</result>
            <result name="successSave" type="redirectAction">
            	<param name="actionName">index</param>
                <param name="namespace">/usuario</param>
                <param name="status">success</param>
            </result>
            <result name="error" type="tiles">usuarioAdd</result>
            <result name="input" type="tiles">usuarioAdd</result>
	</action>

        <!-- Delete -->
        <action name="delete" method="delete" class="usuarioController">
        </action>
    </package>
</struts>
